<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_instruction"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cognitive.game.android.InstructionActivity"
    android:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/heading_space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/instr_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tied_scroll"/>

        <TextView
            android:id="@+id/instr_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/instr_sign"
            android:text="Hi traveller:"
            android:textColor="@android:color/background_dark"
            android:textSize="24sp"
            android:layout_marginLeft="10dp"
            android:typeface="serif" />

    </RelativeLayout>


    <TextView
        android:id="@+id/instruction_part"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/heading_space"
        android:layout_marginTop="20dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:text="@string/instruction_content"
        android:textColor="@android:color/background_dark"
        android:textStyle="normal|bold"
        android:textSize="17sp"
        android:typeface="serif" />

    <Button
        android:id="@+id/next_instr"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:text="MORE TIPS!"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/instr_btn"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:text="GET IT!"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

</RelativeLayout>
